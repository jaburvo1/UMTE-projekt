<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.umte_projekt">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- Permission for camera -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UMTEprojekt"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ActivityAdmin"
            android:exported="false"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.UMTEprojekt.NoActionBar" />
        <activity
            android:name=".ActivityFormSklad"
            android:exported="false"
            android:label="@string/title_activity_form_skald"
            android:theme="@style/Theme.UMTEprojekt.NoActionBar" />
        <activity
            android:name=".SkladService"
            android:exported="false"
            android:label="@string/title_activity_form_sklad"
            android:theme="@style/Theme.UMTEprojekt.NoActionBar" />
        <activity
            android:name=".LoginService"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.UMTEprojekt.NoActionBar"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UMTEprojekt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>